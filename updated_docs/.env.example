# Example environment configuration for the trading bot.
# Copy this file to `.env` and replace the placeholder values.  Never commit
# real secrets to version control.

# RPC endpoints
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com       # Public RPC for general requests
PRIVATE_SOLANA_RPC_URL=                                  # Optional private RPC used for turbo trades
JITO_RELAY_URL=https://mainnet.block-engine.jito.wtf/api/v1/bundles  # Jito relay for MEV bundles

# Wallet keys
# Provide the base58 encoded private key for your trading wallet.  This key
# must be encrypted using the envelope scheme documented in WALLET_ENCRYPTION.md.
PRIVATE_KEY=                                             # Required: base58 secret key
PRIVATE_KEY2=                                            # Optional: second wallet for parallel fill

# Telegram bot
START_TELEGRAM=false                                     # Set to true to enable the Telegram bot
TELEGRAM_BOT_TOKEN=                                      # Bot token from @BotFather

# Encryption secrets
ENCRYPTION_SECRET=                                       # Required: used to derive KEKs for wallet encryption【101048639847225†L6-L21】
ENCRYPTION_SECRET_OLD=                                   # Optional: previous secret for key rotation

# Idempotency & caching
IDEMPOTENCY_SALT=my‑unique‑salt                          # Random string to namespace idempotency keys【30051125156274†L190-L199】
IDEMPOTENCY_TTL_SEC=90                                   # TTL in seconds for idempotency cache【30051125156274†L190-L199】
IDEMPOTENCY_TTL_MS=900000                                # Fallback TTL in milliseconds (e.g. 15min)【692999803040974†L0-L2】

# Feature flags
DISABLED_STRATEGIES=                                     # Comma‑separated list of strategies to disable【8826520530653†L21-L31】
DISABLED_ENDPOINTS=                                      # Comma‑separated list of API endpoints to disable【8826520530653†L21-L31】

# Metrics
METRICS_API_KEY=                                         # API key required to access the /metrics endpoint【665845919011301†L248-L254】
METRICS_ALLOW_IPS=                                       # Comma‑separated list of CIDRs allowed to scrape metrics【665845919011301†L256-L264】

# Optional advanced settings
START_STRATEGIES=                                        # Specific strategies to auto‑start (comma‑separated)
MAX_CONCURRENCY=4                                        # Max parallel fills across wallets
COMPUTE_UNIT_PRICE=2000                                  # Micro‑lamports per CU; adjust for fee priority【107868020100458†L172-L234】
JITO_TIP_LAMPORTS=0                                      # Lamports tip for Jito bundles【107868020100458†L242-L289】

# Database (if using a database)
DATABASE_URL=                                            # PostgreSQL connection string

# Two‑factor authentication
# Enable and configure 2FA as documented in AUTH.md.  Leave blank to disable.
TWO_FA_ENABLED=false
TWO_FA_SECRET=